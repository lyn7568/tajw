page {
    background: #f8f8f8;
    width: 100%;
    overflow-x: hidden;
}

.top {
    width: 100%;
    position: relative;
    overflow-x: hidden;
}

.top .userbg {
    width: 110%;
    position: absolute;
    height: 6rem;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
    filter: blur(5px);
    left: 50%;
    margin-left: -55%;
    margin-top: -1rem;
    z-index: 7;
}

.top .whitebg {
    width: 100%;
    position: absolute;
    height: 1rem;
    top: 5rem;
    background: #fff;
    z-index: 8;
}

.top .userMes {
    display: flex;
    width: 100%;
    position: relative;
    z-index: 9;
    box-sizing: border-box;
    padding: 2rem 1rem 0 1rem;
}

.top .userMes .pic {
    width: 4rem;
    height: 4rem;
    border-radius: 4rem;
    background-size: cover;
}

.top .userMes .mes {
    display: flex;
    flex-direction: column;
    flex: 1;
    -webkit-box-flex: 1;
    color: #fff;
    margin-left: 1rem;
}

.top .userMes .mes .userName {
    display: flex;
    width: 100%;
    font-size: 0.7rem;
}

.top .userMes .mes .userName text {
    width: 1rem;
    height: 1rem;
    background: url(data:image/png;base64,) center center no-repeat;
    background-size: contain;
}

.top .userMes .mes .userId {
    display: flex;
    width: 100%;
    font-size: 0.7rem;
}

.top .userMes .mes {
    display: flex;
    flex-direction: column;
    flex: 1;
    -webkit-box-flex: 1;
    color: #fff;
    margin-top: 20rpx;
}

.top .userMes button {
    display: flex;
    width: 3.8rem;
    height: 1.2rem;
    justify-content: center;
    align-items: center;
    border-radius: 2rem;
    color: #f76d50;
    font-size: 0.6rem;
    margin-top: 0.7rem;
}

.top .other {
    display: flex;
    width: 100%;
    background: #fff;
    padding: 0 1rem;
    flex-direction: column;
    box-sizing: border-box;
}

.top .other .sign {
    display: flex;
    width: 100%;
    font-size: 0.7rem;
    margin: 0.5rem 0;
}

.top .other .otherBox {
    display: flex;
    width: 100%;
    margin: 0.5rem 0;
}

.top .other .otherBox .box {
    display: flex;
    flex-direction: column;
    width: 100%;
    flex: 1;
    -webkit-box-flex: 1;
}

.top .other .otherBox .box .num {
    display: flex;
    width: 100%;
    font-size: 0.8rem;
    color: #333;
    justify-content: center;
}

.top .other .otherBox .box .text {
    display: flex;
    width: 100%;
    font-size: 0.7rem;
    color: #333;
    justify-content: center;
}

.top .other .otherBox .line {
    display: flex;
    width: 1px;
    background: linear-gradient(to bottom,#efefef,#ccc,#efefef);
}

.tab {
    display: flex;
    margin-top: 0.5rem;
    flex-direction: column;
}

.tab .nav {
    display: flex;
    width: 100%;
    padding: 0 1rem;
    box-sizing: border-box;
    border-bottom: 1px solid #eee;
    background: #fff;
}

.tab .nav text {
    display: flex;
    width: 100%;
    height: 2.6rem;
    margin: 0 1rem;
    box-sizing: border-box;
    justify-content: center;
    align-items: center;
    font-size: 0.8rem;
}

.tab .nav text.this {
    color: #f76d50;
    border-bottom: 2px solid #f76d50;
}

.tab .con {
    display: flex;
    width: 100%;
    flex-direction: column;
}

.tab .con .li {
    display: flex;
    width: 100%;
    box-sizing: border-box;
    margin-bottom: 0.5rem;
    flex-direction: column;
    background: #fff;
}

.tab .con .li .time {
    display: flex;
    width: 100%;
    height: 2.4rem;
    line-height: 2.4rem;
    font-size: 0.9rem;
    color: #000;
    margin-bottom: 0.5rem;
    padding: 0 1rem;
    font-weight: bold;
    box-sizing: border-box;
}

.tab .con .li .liCon {
    display: flex;
    width: 100%;
    font-size: 0.9rem;
    box-sizing: border-box;
    padding-left: 3rem;
    flex-direction: column;
    padding-right: 1rem;
}

.tab .con .li .liCon .tags {
    display: flex;
    width: 100%;
    margin-bottom: 1rem;
}

.tab .con .li .liCon .tags .tag {
    display: flex;
    background: #E7F9E6;
    padding: 0.25rem 0.5rem;
    justify-content: center;
    align-items: center;
    border-radius: 2rem;
}

.tab .con .li .liCon .tags .tag image {
    display: flex;
    height: 0.9rem;
    width: 0.9rem;
}

.tab .con .li .liCon .tags .tag text {
    display: flex;
    background: #E7F9E6;
    color: #26BCC5;
    font-size: 0.8rem;
    margin-left: 0.25rem;
}

.tab .con .li .liCon .textLine {
    display: flex;
    flex-direction: column;
    position: relative;
}

.tab .con .li .liCon .textLine .text {
    display: flex;
    font-size: 0.9rem;
    flex-direction: column;
    overflow: hidden;
}

.tab .con .li .liCon .textLine .more {
    display: flex;
    width: 100%;
    height: 2rem;
    justify-content: center;
    align-items: center;
    background-image: linear-gradient(rgba(255,255,255,0),rgba(255,255,255,1));
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 9;
}

.tab .con .li .liCon .textLine .more image {
    display: flex;
    width: 2rem;
    height: 1rem;
}

.tab .con .li .liCon .picList {
    display: flex;
    width: 100%;
    margin: 1rem 0 0.5rem 0;
    flex-wrap: wrap;
}

.tab .con .li .liCon .picList .pic {
    display: flex;
    width: 30%;
    height: 5rem;
    background-position: center center;
    background-size: cover;
    border-radius: 0.25rem;
    margin-right: 3.3%;
    margin-bottom: 0.5rem;
}

.tab .con .li .bottomBtn {
    display: flex;
    width: 100%;
    box-sizing: border-box;
    padding-left: 3rem;
    border-top: 1px solid #eee;
    margin-top: 0.5rem;
    padding: 0 1rem 0 3rem;
}

.tab .con .li .bottomBtn .left {
    display: flex;
    flex: 1;
    -webkit-box-flex: 1;
}

.tab .con .li .bottomBtn .left .btn {
    display: flex;
    flex: 1;
    -webkit-box-flex: 1;
    width: 1px;
    height: 2.8rem;
    align-items: center;
    font-size: 0.9rem;
    color: #ccc;
}

.tab .con .li .bottomBtn .left .btn image {
    display: flex;
    width: 0.9rem;
    height: 0.9rem;
    margin-right: 0.25rem;
}

.publish {
    position: fixed;
    right: 0;
    bottom: 2rem;
    z-index: 9999;
}

.publish image {
    display: flex;
    width: 4rem;
}