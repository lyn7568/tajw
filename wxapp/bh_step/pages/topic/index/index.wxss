page {
    background: #f8f8f8;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
}

.tabLine {
    display: flex;
    background: #fff;
    padding: 0 1rem;
    box-sizing: border-box;
    padding-bottom: 0.5rem;
}

.tabLine .tab {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    height: 2.2rem;
    font-size: 0.9rem;
    margin-right: 0.5rem;
    box-sizing: border-box;
}

.tabLine .tab.this {
    font-size: 1.2rem;
    font-weight: bolder;
}

.tabLine .right {
    display: flex;
    flex: 1;
    -webkit-box-flex: 1;
    justify-content: flex-end;
    align-items: flex-end;
}

.tabLine .right .btn {
    display: flex;
    background: #E7F9E6;
    color: #26BCC5;
    font-size: 0.8rem;
    padding: 0.25rem 0.5rem;
    border-radius: 2rem;
}

.tabLine .right .btn image {
    display: flex;
    width: 1rem;
    height: 1rem;
    margin-right: 0.25rem;
}

.topicList {
    display: flex;
    flex: 1;
    -webkit-box-flex: 1;
    width: 100%;
    box-sizing: border-box;
    flex-direction: column;
}

.topicList .top {
    display: flex;
    width: 100%;
    flex-direction: column;
    background: #fff;
}

.topicList .top .title {
    display: flex;
    flex: 1;
    -webkit-box-flex: 1;
    margin: 0.5rem 1rem;
    font-size: 0.9rem;
}

.topicList .top .scroll {
    display: flex;
    width: 100%;
    padding: 0 1rem;
    overflow-x: scroll;
    -webkit-overflow-scrolling: touch;
}

.topicList .top .scroll .inner {
    display: inline-flex;
    margin-right: 1rem;
}

.topicList .top .scroll .box {
    display: flex;
    flex-shrink: 0;
    width: 8rem;
    height: 4rem;
    position: relative;
    margin-right: 1rem;
    overflow: hidden;
    background-position: center centerr;
    background-size: cover;
    border-radius: 0.25rem;
}

.topicList .top .scroll .box image {
    display: flex;
    width: 1.5rem;
    border-radius: 0.25rem;
    position: absolute;
    z-index: 10;
    top: 0;
    left: 0.5rem;
}

.topicList .top .topicTitle {
    display: flex;
    position: absolute;
    z-index: 11;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.3);
    color: #fff;
    padding: 0.5rem;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    text-align: center;
    font-size: 0.8rem;
}

.topicList {
    display: flex;
}

.topicList .list {
    display: flex;
    flex-direction: column;
    margin-bottom: 0.5rem;
}

.topicList .list .li {
    display: flex;
    flex-direction: column;
    width: 100%;
    background: #fff;
    margin-bottom: 0.5rem;
}

.topicList .list .li .topicBox {
    display: flex;
    width: 100%;
    padding: 1rem;
    box-sizing: border-box;
}

.topicList .list .li .topicBox .pic {
    display: flex;
    width: 3.5rem;
    height: 3.5rem;
    background-position: center center;
    background-size: cover;
    border-radius: 4rem;
}

.topicList .list .li .topicBox .right {
    display: flex;
    width: 1px;
    flex: 1;
    -webkit-box-flex: 1;
    flex-direction: column;
    margin-left: 0.5rem;
}

.topicList .list .li .topicBox .line {
    display: flex;
    width: 100%;
    overflow: hidden;
    align-items: center;
    margin-bottom: 0.5rem;
}

.topicList .list .li .topicBox .line:last-child {
    margin-bottom: 0;
}

.topicList .list .li .topicBox .line .userName {
    display: flex;
    flex: 1;
    -webkit-box-flex: 1;
    font-size: 0.9rem;
    color: #333;
}

.topicList .list .li .topicBox .line button {
    display: flex;
    height: 1.8rem;
    color: #f76d50;
    border: 1px solid #f76d50;
    font-size: 0.8rem;
    justify-content: center;
    align-items: center;
    border-radius: 4rem;
    padding: 0 1rem;
    margin: 0;
    background: none;
    line-height: initial;
}

.button-hover {
    background: none;
}

.topicList .list .li .topicBox .line .topicTitle {
    display: flex;
    background: #E7F9E6;
    color: #26BCC5;
    font-size: 0.8rem;
    padding: 0.25rem 0.5rem;
    border-radius: 2rem;
}

.topicList .list .li .topicBox .line .topicTitle image {
    display: flex;
    width: 1rem;
    height: 1rem;
    margin-right: 0.25rem;
}

.topicList .list .li .topicBox .picList {
    display: flex;
    width: 100%;
    flex-wrap: wrap;
}

.topicList .list .li .topicBox .picList .picBox {
    display: flex;
    width: 31%;
    height: 4.3rem;
    margin-right: 3.5%;
    background-position: center center;
    background-size: cover;
    position: relative;
    margin-bottom: 0.5rem;
    border-radius: 0.25rem;
}

.topicList .list .li .topicBox .picList .picBox:nth-child(3n) {
    margin-right: 0;
}

.topicList .list .li .topicBox .line .time {
    font-size: 0.7rem;
    color: #999;
}

.topicList .list .li .bottomBtn {
    display: flex;
    width: 100%;
    box-sizing: border-box;
    padding-left: 3rem;
    border-top: 1px solid #eee;
    padding: 0 1rem 0 5rem;
}

.topicList .list .li .bottomBtn .left {
    display: flex;
    flex: 1;
    -webkit-box-flex: 1;
}

.topicList .list .li .bottomBtn .left .btn {
    display: flex;
    flex: 1;
    -webkit-box-flex: 1;
    width: 1px;
    height: 2.8rem;
    align-items: center;
    font-size: 0.9rem;
    color: #ccc;
}

.topicList .list .li .bottomBtn .left .btn image {
    display: flex;
    width: 0.9rem;
    height: 0.9rem;
    margin-right: 0.25rem;
}

.topicList .list .li .topicBox .textLine {
    display: flex;
    flex-direction: column;
    position: relative;
    margin-bottom: 0.5rem;
}

.topicList .list .li .topicBox .textLine .text {
    display: flex;
    font-size: 0.9rem;
    flex-direction: column;
    overflow: hidden;
    word-break: break-all;
}

.topicList .list .li .topicBox .textLine .more {
    display: flex;
    width: 100%;
    height: 2rem;
    justify-content: center;
    align-items: center;
    background-image: linear-gradient(rgba(255,255,255,0),rgba(255,255,255,1));
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 9;
}

.topicList .list .li .topicBox .textLine .more image {
    display: flex;
    width: 2rem;
    height: 1rem;
}

.publish {
    position: fixed;
    right: 0;
    bottom: 2rem;
    z-index: 9999;
}

.publish image {
    display: flex;
    width: 4rem;
}