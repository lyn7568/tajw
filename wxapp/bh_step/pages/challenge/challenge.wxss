.head {
    margin-top: -130rpx;
}

.head image {
    width: 100%;
    height: 491rpx;
    display: block;
}

.challengelist {
    padding: 0 40rpx;
    margin-top: -80rpx;
}

.list {
    border-radius: 10rpx;
    padding: 50rpx 10rpx;
    text-align: center;
    color: #FFF;
    margin-bottom: 40rpx;
    background: linear-gradient(#FE654D,#FF7F4E);
}

.challengelist .status1 {
    background: linear-gradient(#FE654D,#FF7F4E);
}

.status2 {
    background: linear-gradient(#329EEC,#6AC4FF);
}

.status3 {
    background: linear-gradient(#9372CB,#E1A4CF);
}

.list .title {
    font-size: 48rpx;
}

.list .time {
    width: 488rpx;
    height: 56rpx;
    background: #EF4F35;
    border-radius: 28rpx;
    line-height: 56rpx;
    font-size: 24rpx;
    margin: 30rpx auto;
}

.status2 .time {
    background: #2A96E6!important;
}

.status3 .time {
    background: #7A5FA2!important;
}

.listflex {
    display: flex;
    align-items: center;
}

.listflex .canyumsg {
    flex: 1;
    text-align: center;
}

.canyumsg .num {
    font-size: 56rpx;
    font-weight: bold;
}

.canyuline {
    width: 1px;
    height: 80rpx;
    background: rgba(255,255,255,0.6);
}

.listbtn {
    width: 488rpx;
    height: 112rpx;
    background-color: #FEE976;
    color: #754900;
    font-size: 32rpx;
    line-height: 112rpx;
    margin-top: 30rpx;
    font-weight: bold;
}

.guize {
    width: 150rpx;
    height: 56rpx;
    background: linear-gradient(#3189EB,#1668C3);
    line-height: 56rpx;
    position: absolute;
    right: 0;
    top: 60rpx;
    text-align: center;
    color: #FFF;
    font-size: 24rpx;
    border-top-left-radius: 100rpx;
    border-bottom-left-radius: 100rpx;
}